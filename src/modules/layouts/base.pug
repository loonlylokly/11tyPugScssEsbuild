doctype html
html(lang='ru')
  head
    block meta
      - var seotitle = '';
      - var seodescription = '';
      - var seokeywords = '';

    meta(charset='UTF-8')
    title= seotitle
    meta(name='description', content=seodescription)
    meta(name="format-detection" content="telephone=no")
    link(rel='preload', href='assets/fonts/GothicA1-SemiBold.woff2', as='font', type="font/woff2" fetchpriority='high' crossorigin)
    link(rel='preload', href='assets/fonts/GothicA1-Medium.woff2', as='font', type="font/woff2" fetchpriority='high' crossorigin)
    link(rel='preload', href='assets/fonts/IBMPlexSans-VariableFont.woff2', type="font/woff2" as='font', fetchpriority='high' crossorigin)
    link(rel='preload', href='css/style.css', as='style', fetchpriority='high')
    link(rel='preload', href='assets/images/icons/sprites.svg', as='image' fetchpriority='high')
    link(rel='preload', href='js/app.js', as='script', fetchpriority='high')
    block head
    link(rel='stylesheet', href='css/style.css')
    script(defer, src='assets/js/app.js')
    block scripts

  body
    include ../components/sprite.pug
    include ../components/dialog/dialog.pug

    a.skip-link(href="#main") Перейти к контенту

    //Шапка
    block header

    //Основная часть
    main#main
      block main

    //Подвал
    block footer

