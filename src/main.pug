extends ./modules/layouts/ind

block meta
  - var seotitle = 'Список страниц';
  - var seodescription = '';
  - var seokeywords = '';

block main
  style.
    .wrap {
      width: 100vw;
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 40px 0;
      position: relative;
      z-index: 10;
    }

    .wrap__list {
      font-size: 1.2rem;
    }

    .wrap__list li:not(:last-child) {
      margin-bottom: 0.8rem;
    }

    .wrap__list a {
      color: currentColor;
      text-decoration: none;
    }

  .wrap
    ol.wrap__list
      li
        a(href='index.html', target='_blank') Главная страница
      li
        a(href='contacts.html', target='_blank') Контакты
